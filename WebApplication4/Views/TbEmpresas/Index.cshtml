@model IEnumerable<WebApplication4.Models.TbEmpresa>

@{
    ViewData["Title"] = "Index";
}

<div class="text-center">
    <h1>Listado de Empresas</h1>
    <hr />
</div>
<p>
    <a type="button" class="btn btn-primary" asp-action="Create">
        <i class="icofont-plus text-light"></i>
        Crear Nuevo</a>
</p>
<table id="Secundaria" class="table align-middle table-bordered border border-dark">
    <thead class="table-dark">
        <tr>
            <th>
                Nombre de la Empresa
            </th>
            <th>
                NIT
            </th>
            <th>
                Teléfono
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nit)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefono)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdEmpresa">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.IdEmpresa">Detalles</a> |
                <a asp-action="Delete" asp-route-id="@item.IdEmpresa">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
