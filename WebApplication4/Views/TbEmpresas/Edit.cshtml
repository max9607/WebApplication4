@model WebApplication4.Models.TbEmpresa

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>

<h4>Registro n° @Html.DisplayFor(model => model.IdEmpresa)</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdEmpresa" />
            <div class="form-group">
                <label class="control-label">Nombre de la Empresa</label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">NIT</label>
                <input asp-for="Nit" class="form-control" />
                <span asp-validation-for="Nit" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Telefono" class="control-label"></label>
                <input asp-for="Telefono" class="form-control" />
                <span asp-validation-for="Telefono" class="text-danger"></span>
            </div>
           @*  <div class="form-group">
                <label asp-for="Estado" class="control-label"></label>
                <input asp-for="Estado" class="form-control" />
                <span asp-validation-for="Telefono" class="text-danger"></span>
            </div> *@
              @*   <label>Estado de Empresa:</label>
                <div class="switch">
                    <input type="checkbox" id="empresaSwitch" @(Model.Estado.HasValue && Model.Estado.Value ? "checked" : "") />
                    <label for="empresaSwitch"></label>
                </div> *@
            <div class="form-check form-switch">
                <input type="hidden" asp-for="Estado" />
                <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckChecked" @(Model.Estado.GetValueOrDefault() ? "checked" : "")>
                <label class="form-check-label" for="flexSwitchCheckChecked">Estado</label>
            </div>


            <div>
                <h5 style="padding-bottom:10px;">Opciones</h5>

                <hr />
                <dd>
                    <input type="submit" value="Guardar" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-secondary">Volver</a>

                </dd>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        $(document).ready(function () {
            $('#flexSwitchCheckChecked').change(function () {
                // Captura el nuevo estado del checkbox
                var nuevoEstado = $(this).prop('checked');

                // Cambia el valor del campo oculto según el estado del checkbox
                $('#Estado').val(nuevoEstado);

                // Envía automáticamente el formulario
                $('form').submit();
            });
        });
    </script>
}