@model WebApplication4.Models.TbUsuario

@{
    ViewData["Title"] = "Details";
}

<h1>Detalles</h1>

<div>
    <h4>Usuario n° @Html.DisplayFor(model => model.IdUsuario)</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class = "col-sm-2">
            Apellido Paterno
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Apellido1)
        </dd>
        <dt class = "col-sm-2">
            Apellido Materno
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Apellido2)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Telefono)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Telefono)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Correo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Correo)
        </dd>
        <dt class = "col-sm-2">
            Empresa
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdEmpresaNavigation.Nombre)
        </dd>
    </dl>
</div>
<div>
    <h5 style="padding-bottom:10px;">Opciones</h5>

    <hr />
    <dd>
        @if (User.IsInRole("Administrador"))
        {
            <a asp-action="Edit" asp-route-id="@Model?.IdUsuario" class="btn btn-warning">Editar</a>
            <a asp-action="Index" class="btn btn-secondary">Volver</a>
 
        }
        @if (User.IsInRole("Usuario") || User.IsInRole("Técnico"))
        {
            <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Volver</a>
        }
    </dd>
</div>
