@model IEnumerable<WebApplication4.Models.TbAcceso>

@{
    ViewData["Title"] = "Index";
}

<div class="text-center">
    <h1>Listado de Accesos</h1>
    <hr />
</div>
<p>
    <a type="button" class="btn btn-primary" asp-action="Create">
        <i class="icofont-plus text-light"></i>
        Crear Nuevo</a>
</p>
<table id="Secundaria" class="table align-middle">
    <thead class="table-dark">
        <tr>
            <th>
                Correo de Acceso
            </th>
            <th>
                Contraseña
            </th>
            <th>
                Rol
            </th>
            <th>
                Usuario Asignado
            </th>
            <th>
                Opciones
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Correo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClaveHash)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdPermisoNavigation.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdUsuarioNavigation.Nombre)
                    @Html.DisplayFor(modelItem => item.IdUsuarioNavigation.Apellido1)
                        @Html.DisplayFor(modelItem => item.IdUsuarioNavigation.Apellido2)
            </td>
                <td class="text-center">
                    <div class="btn-group btn-group-sm" role="group" aria-label="Small button group">
                        <a asp-action="Edit" asp-route-id="@item.IdAcceso" class="btn btn-outline-dark">Editar</a>
                        <a asp-action="Details" asp-route-id="@item.IdAcceso" class="btn btn-outline-dark">Detalles</a>
                    </div>
                </td>
        </tr>
}
    </tbody>
</table>
<p>
    <a type="button" class="btn btn-primary" asp-action="Index2">
        <i class="icofont-plus text-light"></i>
        Deshabilitados
    </a>
</p>
